{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <main role="main" class="container">

    <div class="row">
     {% for article in articles %}
    
    

        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
          <img src="{{ article.image }}" alt="{{ article.image }}">
            <div class="card-body">
              <p class="card-text"> {{ article.description }}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{ path('article_show', {"id":article.id}) }}" class="btn btn-sm btn-outline-secondary">View</a>
                  {% if is_granted('ROLE_ADMIN') %}
                  <a href="{{ path('article_edit', {"id":article.id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>
                  <a href="{{ path('article_delete', {"id": article.id}) }}" class="btn btn-sm btn-outline-secondary" onclick="return confirm('Attention ce ci va supprimer l\'article selectionner')">Delete</a>
                  {% endif %}
                </div>
                <small class="text-muted">{{ article.createdAt |date("d/m/Y") }}</small>
              </div>
            </div>
          </div>
        </div>
        
{% endfor %}

{% endblock %}